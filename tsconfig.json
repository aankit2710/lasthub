{
  "compilerOptions": {
    // "target": "es6",
    "target": "ESNext",
    "module": "CommonJS",
    "lib": [
        "DOM",
        "ES5"
    ],
    // "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
